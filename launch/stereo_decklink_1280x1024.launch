<!-- -*- mode: XML -*- -->

<launch>

  <!-- Set the name -->
  <arg name="stereo_rig_name"/>
  <arg name="left_cam_device"
       default="1"/>
  <arg name="right_cam_device"
       default="0"/>
  <arg name="images_per_seconds"
       default="0"/>
  <arg name="stereo_proc"
       default="False"/>

  <!-- set lower default rate if stereo proc is activated -->
  <arg name="_images_per_seconds"
       if="$(eval ((images_per_seconds == 0) and stereo_proc))"
       default="15"/>
  <arg name="_images_per_seconds"
       unless="$(eval ((images_per_seconds == 0) and stereo_proc))"
       default="$(arg images_per_seconds)"/>

  <!-- camera driver nodes -->
  <include file="$(find dvrk_video)/launch/gscam_decklink_stereo.launch">
    <arg name="stereo_rig_name"
	 value="$(arg stereo_rig_name)"/>
    <arg name="left_cam_device"
	 value="$(arg left_cam_device)"/>
    <arg name="right_cam_device"
	 value = "$(arg right_cam_device)"/>
    <arg name="images_per_seconds"
	 value="$(arg _images_per_seconds)"/>
    <arg name="deinterlace"
	 value="True"/>
    <arg name="stereo_proc"
	 default="$(arg stereo_proc)"/>
    <arg name="crop_top"
	 value="28"/>
    <arg name="crop_bottom"
	 value="28"/>
    <arg name="crop_left"
	 value="310"/>
    <arg name="crop_right"
	 value="310"/>
  </include>

  <!-- display video using simple ros image_view -->
  <node name="dvrk_left_view"
	pkg="image_view"
	type="image_view"
	args="image:=/$(arg stereo_rig_name)/left/image_raw">
    <param name="autosize" value="True" />
  </node>
  <node name="dvrk_right_view"
	pkg="image_view"
	type="image_view"
	args="image:=/$(arg stereo_rig_name)/right/image_raw">
    <param name="autosize" value="True" />
  </node>

</launch>
