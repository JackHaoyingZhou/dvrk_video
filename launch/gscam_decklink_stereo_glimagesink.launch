<!-- -*- mode: XML -*- -->

<launch>

  <!-- Set this to your camera's name -->
  <arg name="rig_name" default="jhu_daVinci_Si"/>

  <arg name="left_camera_name" default="left"/>
  <arg name="left_cam_device" default="1"/>
  <arg name="right_camera_name" default="right"/>
  <arg name="right_cam_device" default="0"/>

  <!-- camera driver node -->
  <include file="$(find dvrk_video)/launch/gscam_decklink_glimagesink.launch" ns="$(arg rig_name)">
    <arg name="camera_name" value="$(arg left_camera_name)"/>
    <arg name="device" value="$(arg left_cam_device)"/>
    <arg name="camera_info_url" value="package://$(arg rig_name)/calibrations/$(arg left_camera_name).yaml"/>
  </include>

  <!-- camera driver node -->
  <include file="$(find dvrk_video)/launch/gscam_decklink_glimagesink.launch" ns="$(arg rig_name)">
    <arg name="camera_name" value="$(arg right_camera_name)"/>
    <arg name="device" value="$(arg right_cam_device)"/>
    <arg name="camera_info_url" value="package://$(arg rig_name)/calibrations/$(arg right_camera_name).yaml"/>
  </include>

</launch>
